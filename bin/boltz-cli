#!/usr/bin/env node

const path = require('path');
const os = require('os');

const getBoltzDir = () => {
  const home = os.homedir();
  return process.platform === 'darwin' 
    ? path.join(home, 'Library', 'Application Support', 'Boltz')
    : path.join(home, '.boltz');
};

require('yargs')
  .options({
    rpc: {
      hidden: true,
    },
    api: {
      hidden: true,
    },
    'rpc.host': {
      describe: 'gRPC service host',
      alias: 'h',
      default: '127.0.0.1',
      type: 'string',
    },
    'rpc.port': {
      describe: 'gRPC service port',
      alias: 'p',
      default: 9000,
      type: 'number',
    },
    'rpc.disable-ssl': {
      describe: 'Disable SSL authentication for the gRPC',
      alias: 'd',
      default: false,
      type: 'boolean',
    },
    'rpc.certificates': {
      describe: 'gRPC SSL certificates folder',
      default: path.join(getBoltzDir(), 'certificates'),
      type: 'string',
    },
    'api.endpoint': {
      describe: 'Boltz API endpoint',
      alias: 'e',
      default: 'http://127.0.0.1:9001',
      type: 'string',
    },
  })
  .commandDir('../dist/lib/cli/commands/')
  .demandCommand(1, '')
  .strict().argv;
