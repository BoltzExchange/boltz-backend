#!/usr/bin/env node

require('yargs')
  .options({
    provider: {
      describe: 'HTTP endpoint of the web3 provider',
      default: 'http://127.0.0.1:8545',
      type: 'string',
      alias: 'p',
    },
    chain: {
      describe: 'EVM chain to use ("rsk" or "ethereum")',
      default: 'rsk',
      type: 'string',
      alias: 'c',
    },
  })
  .commandDir('../dist/lib/cli/ethereum/commands/')
  .demandCommand(1, '')
  .strict().argv;
