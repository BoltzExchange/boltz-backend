#!/usr/bin/env node
const { generateReport } = require('../dist/CliTools');

const { argv } = require('yargs').options({
  dbpath: {
    describe: 'Path to the database file',
    type: 'string',
  },
  reportpath: {
    describe: 'Path to the CSV report',
    type: 'string',
  },
});

// Delete non-config keys from argv
delete argv._;
delete argv.$0;
delete argv.help;
delete argv.version;

generateReport(argv);
