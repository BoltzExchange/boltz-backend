{
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-sql"
  ],
  "importOrder": ["^./Tracing$", "<THIRD_PARTY_MODULES>", "^[../]", "^[./]"],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": ["typescript"],
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "endOfLine": "lf",
  "arrowParens": "always",
  "bracketSpacing": true,
  "proseWrap": "always",
  "overrides": [
    {
      "files": "*.sql",
      "options": {
        "parser": "sql",
        "language": "postgresql",
        "keywordCase": "upper",
        "dataTypeCase": "upper",
        "functionCase": "upper"
      }
    }
  ]
}
